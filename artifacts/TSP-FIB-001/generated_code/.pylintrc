[MASTER]
disable=
    missing-module-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    duplicate-code,
    line-too-long,

[MESSAGES CONTROL]
enable=
    all

[REPORTS]
output-format=colorized
reports=no
score=yes

[REFACTORING]
max-nested-blocks=5
max-locals=15
max-branches=12
max-statements=50

[BASIC]
good-names=i,j,k,ex,Run,_,n,x,y,z,f,df
bad-names=foo,bar,baz,toto,tutu,tata
include-naming-hint=yes
function-rgx=[a-z_][a-z0-9_]*$
function-name-hint=[a-z_][a-z0-9_]*$
variable-rgx=[a-z_][a-z0-9_]*$
variable-name-hint=[a-z_][a-z0-9_]*$
const-rgx=(([A-Z_][A-Z0-9_]*)|([a-z_][a-z0-9_]*)|(__.*__))$
const-name-hint=(([A-Z_][A-Z0-9_]*)|([a-z_][a-z0-9_]*)|(__.*__))$
attr-rgx=[a-z_][a-z0-9_]*$
attr-name-hint=[a-z_][a-z0-9_]*$
argument-rgx=[a-z_][a-z0-9_]*$
argument-name-hint=[a-z_][a-z0-9_]*$
class-rgx=[A-Z_][a-zA-Z0-9]*$
class-name-hint=[A-Z_][a-zA-Z0-9]*$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
module-name-hint=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
no-docstring-rgx=^_
docstring-min-length=10

[FORMAT]
max-line-length=100
indent-string='    '
indent-after-paren=4
expected-line-ending-format=LF

[LOGGING]
logging-format-style=new
logging-modules=logging

[VARIABLES]
init-import=no
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|^ignored_|^unused_
additional-builtins=

[TYPECHECK]
contextmanager-decorators=contextlib.contextmanager
ignore-mixin-members=yes
ignore-none=yes
ignore-on-opaque-types=yes
mixin-class-rgx=.*[Mm]ixin
signature-mutators=

[SIMILARITIES]
min-similarity-lines=4
ignore-comments=yes
ignore-docstrings=yes
ignore-imports=yes
ignore-signatures=yes

[SPELLING]
spelling-dict=en_US
spelling-ignore-words=
spelling-private-word-hint=no
spelling-store-unknown-words=no

[DESIGN]
max-args=5
max-attributes=7
max-bool-expr=5
max-parents=7
min-public-methods=2
max-public-methods=20

[CLASSES]
defining-attr-methods=__init__,__new__,setUp,__post_init__
valid-classmethod-first-arg=cls
valid-metaclass-classmethod-first-arg=cls
exclude-protected=_asdict,_fields,_make,_replace,_source,_get_counter

[IMPORTS]
allow-wildcard-with-all=no
allow-reexport-from-package=no
deprecated-modules=optparse,tkinter.tix

[EXCEPTIONS]
overgeneral-exceptions=Exception