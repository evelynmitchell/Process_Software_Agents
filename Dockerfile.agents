# ASP Platform Agent Runner
# Executes agent pipelines on target git repositories

FROM python:3.12-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

# Set working directory
WORKDIR /app

# Install system dependencies (includes git and ssh for repo access)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    openssh-client \
    && rm -rf /var/lib/apt/lists/*

# Install uv package manager
SHELL ["/bin/bash", "-o", "pipefail", "-c"]
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Add uv and virtualenv to PATH
ENV PATH="/root/.local/bin:/app/.venv/bin:$PATH"

# Copy project files and source for dependency installation
# (setuptools needs src/ to exist for package discovery)
COPY pyproject.toml uv.lock ./
COPY src/ ./src/

# Install dependencies using uv (production only, no dev dependencies)
RUN uv sync --frozen --no-dev

# Copy remaining application files
COPY database/ ./database/
COPY scripts/ ./scripts/

# Create directories for data and artifacts
RUN mkdir -p ./data ./artifacts

# Create non-root user for security
RUN groupadd -r asp && useradd -r -g asp asp \
    && chown -R asp:asp /app

# Switch to non-root user
USER asp

# Default command - can be overridden
CMD ["python", "-m", "asp.cli", "--help"]
