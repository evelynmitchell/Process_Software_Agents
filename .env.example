# Hello World API Environment Configuration
# Copy this file to .env and modify values as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Configuration
API_TITLE=Hello World API
API_VERSION=1.0.0
API_DESCRIPTION=A simple API that returns Hello World greeting with timestamp

# Development Settings
DEBUG=false
TESTING=false

# CORS Settings (if needed for frontend integration)
ALLOW_ORIGINS=*
ALLOW_CREDENTIALS=false
ALLOW_METHODS=GET,POST,PUT,DELETE
ALLOW_HEADERS=*
